<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
        "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
  <head>
    <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
    <title><%= @page_title || "Buckets" %></title>
    <%= javascript_include_tag :defaults %>
    <%= stylesheet_link_tag "application" %>
  </head>
  <body>
  
  
  <% form_tag :action => "login" do -%>
  <div align="center">
    <div id="outside_container">
      <div id="header_container" class="spacer">
        <div id="tabs">
          &nbsp;
        </div>
        <div id="login_area">Login:
          <%= text_field_tag :email, "Email", :style => "width: 100px; background-color: #fff;", :onclick => "this.value = ''; this.focus();" %>
          <%= password_field_tag :password, "Password", :style => "width: 100px; background-color: #fff;", :onclick => "this.value = ''; this.focus();" %>
          <%= submit_tag "Login" %>
        </div>
      </div>
      <div id="content_container">
      
        <table cellspacing="0" cellpadding="3" border="0" width="100%" id="dashboard_table">
          <tr>
            <td valign="top">
            <!-- LEFT SIDE -->
            
              <%= yield :layout %>
            
            </td>
          </tr>
        </table>
        
      </div>
      <div id="footer_container">
        Terms of Service | Privacy Policy | Contact Us
      </div>
    
    </div>
  </div>  
  <% end %>

  </body>
</html>